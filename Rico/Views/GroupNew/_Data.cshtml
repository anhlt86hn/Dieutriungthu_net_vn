<!--Ajax sử dụng sửa dữ liệu trực tiếp trên form-->
<script type="text/javascript">
    $(function () {
        //$('#msg').hide();
        $(".alert").hide();
        // Ajax sử dụng cho change active
        $(".active").click(function () {
            var id = $(this).attr("id");          
            $.post("/GroupNew/ChangeActive", { "id": id },
                function (data) {
                    $(".alert").replaceWith("<div class='alert alert-info'>" + data + "</div>");
                    $(".alert").fadeOut(4000);                   
                });
        });

        $(".priority").click(function () {
            var id = $(this).attr("id");
            $.post("/GroupNew/ChangePriority", { "id": id },
                function (data) {
                    $(".alert").replaceWith("<div class='alert alert-info'>" + data + "</div>");
                    $(".alert").fadeOut(4000);
                });
        });

        $(".index").click(function () {
            var id = $(this).attr("id");
            $.post("/GroupNew/ChangeIndex", { "id": id },
                function (data) {
                    $(".alert").replaceWith("<div class='alert alert-info'>" + data + "</div>");
                    $(".alert").fadeOut(4000);
                });
        });

        // Ajax sử dụng cho change ord
        $(".ord").change(function () {
            var id = $(this).attr("id");
            var ord = $(this).val();
            if (ord == "") {
                $(".alert").replaceWith("<div class='alert alert-info'>" + "Phải nhập đúng dữ liệu." + "</div>");
                $(".alert").fadeOut(4000);                
            } else {                
                $.post("/GroupNew/UpdateDirect", { "id": id, "ord": ord },
                    function (data) {
                        $(".alert").replaceWith("<div class='alert alert-info'>" + data + "</div>");
                        $(".alert").fadeOut(4000);                       
                    });
            }
        });
        // Ajax sử dụng cho change ord
        $(".name").change(function () {
            var id = $(this).attr("id");
            var name = $(this).val();
            if (name == "") {
                $(".alert").replaceWith("<div class='alert alert-info'>" + "Phải nhập đúng dữ liệu." + "</div>");
                $(".alert").fadeOut(4000);               
            } else {
                $.post("/GroupNew/UpdateDirect", { "id": id, "name": name },
                    function (data) {
                        $(".alert").replaceWith("<div class='alert alert-info'>" + data + "</div>");
                        $(".alert").fadeOut(4000);                       
                    });
            }
        });

        $(".tag").change(function () {
            var id = $(this).attr("id");
            var tag = $(this).val();
            if (tag == "") {
                $(".alert").replaceWith("<div class='alert alert-info'>" + "Phải nhập đúng dữ liệu." + "</div>");
                $(".alert").fadeOut(4000);             
            } else {               
                $.post("/GroupNew/UpdateDirect", { "id": id, "tag": tag },
                    function (data) {
                        $(".alert").replaceWith("<div class='alert alert-info'>" + data + "</div>");
                        $(".alert").fadeOut(4000);                      
                    });
            }
        });
    });

