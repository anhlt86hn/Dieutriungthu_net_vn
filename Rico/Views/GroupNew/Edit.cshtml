@model Rico.Models.GroupNew
@{
    ViewBag.Title = "Chỉnh sửa Danh Mục Tin";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@section Scripts
{
     <!-- Validate Data -->
    <script type="text/javascript">

        (function ($, W, D) {

            var JQUERY4U = {};

            JQUERY4U.UTIL =
            {
                setupFormValidation: function () {
                    //validation rules
                    $("#GroupNewedit-form").validate({
                        rules: {
                            Name: "required",
                            Title: "required",
                            Description: "required",
                            Keyword: "required",
                            Ord: {
                                required: true,
                                number: true
                            }
                        },
                        messages: {
                            Name: "Phải nhập tên Danh Mục",
                            Title: "Phải nhập tiêu đề",
                            Description: "Phải nhập miêu tả",
                            Keyword: "Phải nhập từ khóa",
                            Ord: {
                                required: "Phải nhập thứ tự",
                                number: "Phải nhập kiểu số"
                            }
                        },
                        submitHandler: function (form) {
                            form.submit();
                        }
                    });
                }
            }

            //when the dom has loaded setup form validation rules
            $(D).ready(function ($) {
                JQUERY4U.UTIL.setupFormValidation();
            });

        })(jQuery, window, document);
    </script>
    <!-- End Validate Data -->

<script type="text/javascript">
        $(function () {
            $("#SelectImage").click(function () {
                var finder = new CKFinder();
                finder.selectActionFunction = function (fileUrl) {
                    $("#Image").val(fileUrl);
                };
                finder.popup();
            });
        });
</script>
<script type="text/javascript">
    var editor;
    function createEditor(languageCode, id) {
        var editor = CKEDITOR.replace(id, {
            language: languageCode
        });
    }

    $(function () {
        createEditor('vi', 'Detail');
    });   
</script>
}

