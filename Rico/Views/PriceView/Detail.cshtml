@using PagedList.Mvc;
@using PagedList;
@using Rico.Models;
@{
    ViewBag.Title = @Html.Raw(ViewBag.tit);
    ViewBag.des = @Html.Raw(ViewBag.des);
    ViewBag.key = @Html.Raw(ViewBag.key);
    Layout = "~/Views/Shared/_SubLayout.cshtml";
}
<div class="container sub-main-wrapper">
    <div class="row">
        <div id="Breadcrumb" class="Block Breadcrumb ui-widget-content ui-corner-top ui-corner-bottom col-xs-12 col-sm-12">
            <ul>
                <li class='SecondLast'><a href='/'><i class="icon-home" style="font-size: 14px;"></i>Trang chủ</a></li>
                <li class='Last'><a href='@Html.Raw(ViewBag.MenuLink)'>@Html.Raw(ViewBag.MenuName)</a></li>
            </ul>
        </div>
    </div>

    <div class="row price-detail">
        <div class="col-xs-12 col-sm-2 container-wrapper">
            @Html.Raw(ViewBag.Str)
        </div>

        <div class="col-xs-12 col-sm-10 container-wrapper">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div id="@Model[i].Tag" class="post">
                    <div class="price-detail-wrapper">
                        <h3 class="text-center">
                            @Model[i].Name
                        </h3>
                        <p class="quote text-center">@Model[i].Quote</p>
                        <p class="text-center">@Model[i].Promotion1</p>
                        <p class="text-center">@Model[i].Promotion2</p>
                        <div class="description">
                            <p>@Html.Raw(@Model[i].Detail)</p>
                        </div>
                    </div>
                </div>
            }
        </div>  

    </div>


</div>


