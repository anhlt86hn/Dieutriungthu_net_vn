@model IList<Rico.Models.News>
@{
    ViewBag.Title = @Html.Raw(ViewBag.tit);
    ViewBag.des = @Html.Raw(ViewBag.des);
    ViewBag.key = @Html.Raw(ViewBag.key);
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="viencenter">
    <div class="phan2">
        <div class="phan21">
            <div class="toolcenterlager1"></div>
            <div class="toolcenterlager2">
                <div class="kcgioithieu">
                    @Html.Raw(ViewBag.MenuName)
                    <span id="ctl00_lbsearch"></span>
                </div>
            </div>
            <div class="toolcenterlager3"></div>
        </div>
        <div class="phan21" style="padding-top:7px;">

            <div id="ctl00_xCMSContent_CellModule" valign="top">

                <div style="padding-top:10px;"><strong>@Html.Raw(ViewBag.NewsName)</strong></div>
                <div class="content" style="padding-top:10px;">
                    <p>@Html.Raw(ViewBag.NewsContent)</p>
                    <p>@Html.Raw(ViewBag.NewsDetail)</p>
                </div>


                <div class="cactinkhac" style="padding-left:10px;padding-top:10px;">
                    <a class="style5">  <span id="ctl00_xCMSContent_ctl00_lblNewsOther" style="font-weight:bold;">Các tin khác</span></a>
                    <ul style="margin-left:10px;">
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <li>
                                <div class="tinmoi">
                                    <a class="text_tinkhac" href="/@Model[i].Tag">
                                        @Model[i].Name
                                    </a>
                                </div>
                            </li>
                        }
                    </ul>
     
                </div>
            </div>

        </div>
    </div>
   
</div>

<div class="footerlager"></div>

