@model Rico.Models.Member
@{
    ViewBag.Title = "Thêm thành viên";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section Scripts
{
    <!-- Validate Data -->
    <script type="text/javascript">

        (function ($, W, D) {

            var JQUERY4U = {};

            JQUERY4U.UTIL =
            {
                setupFormValidation: function () {
                    //validation rules
                    $("#Member-form").validate({
                        rules: {

                            Name: "required",
                            Username: "required",
                            Password: "required",
                            Permiss : "required",               
                        },
                        messages: {

                            Name: "Phải nhập tên thành viên",
                            Username: "Phải nhập Tài khoản thành viên (UserName)",
                            Password: "Phải nhập mật khẩu thành viên (Password)",
                            Permiss: "Phải nhập quyền thành viên",                          
                        },
                        submitHandler: function (form) {
                            form.submit();
                        }
                    });
                }
            }

            //when the dom has loaded setup form validation rules
            $(D).ready(function ($) {
                JQUERY4U.UTIL.setupFormValidation();
            });

        })(jQuery, window, document);
    </script>
    <!-- End Validate Data -->
}

<div class="container-fluid">
    <div style="width: 100%; margin: 0 auto;">
        <div id="Breadcrumb" class="Block Breadcrumb ui-widget-content ui-corner-top ui-corner-bottom">
            <ul>
                <li><a href='/admin/default'><i class="icon-home" style="font-size: 14px;"></i>Trang quản trị</a></li>
                <li class='SecondLast'><a href='/admin/thanh-vien'>Thành viên</a></li>
                <li class='Last'><a href='/admin/thanh-vien/them'>Thêm mới thành viên</a></li>
            </ul>
        </div>

        <div style="clear: both;"></div>
        @using (Html.BeginForm("Create", "Member", FormMethod.Post, new { enctype = "multipart/form-data", @id = "Member-form", @class = "validate-form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div id="cph_Main_ContentPane">
                <div class="widget">
                    <!-- widget-title -->
                    <div class="widget-title">
                        <h4><i class="icon-reorder"></i>&nbsp;Thêm mới thành viên</h4>

                        <!-- Button -->
                        @Html.Partial("_SaveNav")
                        <!-- End Button -->

                        <div id="hiddenToolBarScroll" class="scrollBox hidden">
                            <h4>
                                <i class="icon-reorder"></i>&nbsp;Thêm mới thành viên
                            </h4>
                            <div class="FloatMenuBar">

                                @Html.Partial("_SaveNav")
                            </div>
                        </div>

                    </div>
                    <!-- widget-title-end -->
                    <!-- widget-body -->
                    <div class="widget-body">
                        <div id="tabs">
                            <div id="tabs-1">
                                <table class="admintable" style="width: 100%;">
                                    <tr>
                                        <td class="key">Tên thành viên <span class="Required">*</span>
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(m => m.Name, "", new { @class = "text" })
                                            <span class="tooltip-help">
                                                <span class="tooltipContent">
                                                    <p class="tooltiptitle">
                                                        Tên thành viên
                                                    </p>
                                                    <p class="tooltipmessage">
                                                        Tên của thành viên 
                                                    </p>
                                                </span>
                                            </span>
                                        </td>
                                    </tr>
                                     <tr>
                                        <td class="key">Tài khoản <span class="Required">*</span>
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(m => m.Username, "", new { @class = "text" })
                                            <span class="tooltip-help">
                                                <span class="tooltipContent">
                                                    <p class="tooltiptitle">
                                                        Tài khoản quản trị hệ thống
                                                    </p>
                                                    <p class="tooltipmessage">
                                                        Tài khoản quản trị hệ thống
                                                    </p>
                                                </span>
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="key">Mật khẩu <span class="Required">*</span>
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(m => m.Password, "", new { @class = "text" })
                                            <span class="tooltip-help">
                                                <span class="tooltipContent">
                                                    <p class="tooltiptitle">
                                                        Mật khẩu quản trị hệ thống
                                                    </p>
                                                    <p class="tooltipmessage">
                                                        Mật khẩu quản trị hệ thống
                                                    </p>
                                                </span>
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="key">Email thành viên
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(m => m.Email, "", new { @class = "text" })
                                            <span class="tooltip-help">
                                                <span class="tooltipContent">
                                                    <p class="tooltiptitle">
                                                        Email thành viên
                                                    </p>
                                                    <p class="tooltipmessage">
                                                        Email thành viên
                                                    </p>
                                                </span>
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="key">Điện thoại thành viên
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(m => m.Phone, "", new { @class = "text" })
                                            <span class="tooltip-help">
                                                <span class="tooltipContent">
                                                    <p class="tooltiptitle">
                                                        Điện thoại thành viên
                                                    </p>
                                                    <p class="tooltipmessage">
                                                        Điện thoại thành viên
                                                    </p>
                                                </span>
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="key">Địa chỉ thành viên
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(m => m.Address, "", new { @class = "text" })
                                            <span class="tooltip-help">
                                                <span class="tooltipContent">
                                                    <p class="tooltiptitle">
                                                        Địa chỉ thành viên
                                                    </p>
                                                    <p class="tooltipmessage">
                                                        Địa chỉ thành viên
                                                    </p>
                                                </span>
                                            </span>
                                        </td>
                                    </tr>
                                     <tr>
                                        <td class="key">Quyền hạn<span class="Required"></span></td>
                                        <td>
                                            @Html.DropDownList("Permiss", "Chọn quyền hạn thành viên")
                                            <span class="tooltip-help"><span class="tooltipContent">
                                                <p class="tooltiptitle">
                                                   Quyền hạn của thành viên
                                                </p>
                                                <p class="tooltipmessage">
                                                    Quyền hạn của thành viên
                                                </p>
                                            </span></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Kích hoạt</th>
                                        <td>@Html.CheckBox("Active", true)
                                            <span class="tooltip-help">
                                                <span class="tooltipContent">
                                                    <p class="tooltiptitle">
                                                        Kích hoạt hay ko?
                                                    </p>
                                                    <p class="tooltipmessage">
                                                        Kích hoạt hoạt động
                                                    </p>
                                                </span>
                                            </span>
                                        </td>
                                    </tr>
                                </table>

                            </div>
                        </div>

                    </div>
                    <!-- widget-body-end -->
                </div>
            </div>
        }
    </div>
</div>
