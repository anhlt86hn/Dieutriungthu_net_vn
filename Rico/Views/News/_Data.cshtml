<!--Ajax sử dụng sắp xếp dữ liệu trực tiếp trên form-->
<script type="text/javascript">
    $(document).ready(function () {

        // Ajax sử dụng sắp xếp sản phẩm theo tên
        $('#name').click(function () {
            var sortName = '@ViewBag.SortNameParm';
            var currentNewsAmount = '@ViewBag.CurrentNewsAmount';
            $.post("/News/SortByName", { "sortName": sortName, "currentNewsAmount": currentNewsAmount },
            //$.post("/News/SortByName", { "sortName": sortName, "currentNewsAmount": currentNewsAmount },
                function (data) {
                    $("#DataTable").html(data);
                });
        });

        // Ajax sử dụng sắp xếp sản phẩm theo thứ tự
        $('#ord').click(function () {
            var sortOrder = '@ViewBag.SortOrderParm';
            var currentNewsAmount = '@ViewBag.CurrentNewsAmount';
            $.post("/News/SortByOrd", { "sortOrder": sortOrder, "currentNewsAmount": currentNewsAmount },
            //$.post("/News/SortByName", { "sortName": sortName, "currentNewsAmount": currentNewsAmount },
            function (data) {
                $("#DataTable").html(data);
            });
        });

        // Ajax sử dụng sắp xếp sản phẩm theo thứ tự
        $('#sdate').click(function () {
            var sortSDate = '@ViewBag.SortSDateParm';
            var currentNewsAmount = '@ViewBag.CurrentNewsAmount';
            $.post("/News/SortBySDate", { "sortSDate": sortSDate, "currentNewsAmount": currentNewsAmount },
            //$.post("/News/SortByName", { "sortName": sortName, "currentNewsAmount": currentNewsAmount },
            function (data) {
                $("#DataTable").html(data);
            });
        });
    });
</script>


<div id="DataTable">
    <div class="row-fluid">
        <div class="span3">
            <div style="margin-top: 18px;">
                Tổng số tin: <span style='color: #A52A2A;'>@Model.Count</span> / <span style='color: #333;'>@Model.TotalItemCount</span>
            </div>
        </div>
      
    </div>
   

        <!--Partial View phân trang-->
        <div class="pagedlist-top">
            @Html.Partial("_Paging")
        </div>
  

        <!--Hiển thị sản phẩm-->
        <table class="table table-striped table-bordered dataTable table-hover" cellspacing="0" id="tableNews" style="border-collapse: collapse;">
            <tr>
                <th scope="col" class="CheckBoxsmall" style="text-align: center; width: 20px;">
                    <input type="checkbox" onclick="Javascript: chkSelectAll_OnClick(this)" id="chkSelectAll" name="checkAll" />
                    <input name="mPage" id="mPage" value="@ViewBag.mPage" hidden="hidden" />
                    <input name="PageSize" id="PageSize" value="@ViewBag.PageSize" hidden="hidden" />
                </th>
                <th scope="col" class="number" style="width: 50px;">Ảnh</th>
                <th scope="col" id="name" class="NumberOrdDown">
                    @Html.Label("Tên Tin")
                </th>
                <th scope="col" id="tag" style="width: 260px;">
                    @Html.Label("Sửa Tag")
                </th>
                <th scope="col" id="ord" class="NumberOrdDown" style="width: 40px;">@Html.Label("Thứ tự")</th>
                <th scope="col" id="sdate" class="NumberOrdDown" style="width: 200px;">@Html.Label("Ngày tạo")</th>
                <th scope="col" class="number" style="width: 40px;">Trang chủ</th>
                <th scope="col" class="number" style="width: 40px;">Kích hoạt</th>
                <th scope="col" class="number" style="width: 100px; text-align: center">Chức năng</th>
            </tr>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr style="background-color: #fff">
                    <td style="text-align: center">
                        @Html.CheckBox("chk" + Model[i].Id, new { id = "chkSelect", onclick = "Javascript:chkSelect_OnClick(this,0)", @class = "chk" })
                    </td>
                    <td class="text-center" style="vertical-align: middle;">
                        <img width="40" src="@Model[i].Image" alt=""/>
                    </td>
                    <td class="text" style="vertical-align: middle;">
                        @Html.TextBox("Name" + Model[i].Id, @Model[i].Name, new { @style = "width:250px; text-align: left", @class = "name", @id = @Model[i].Id })
                    </td>
                    <td class="text" style="vertical-align: middle;">
                      @Html.TextBox("Tag" + Model[i].Id, @Model[i].Tag, new { @style = "width:250px; text-align: left", @class = "tag", @id = @Model[i].Id })
                    </td>
                    <td class="text" style="text-align: center;vertical-align:middle;">
                        @Html.TextBox("Ord" + Model[i].Id, @Model[i].Ord, new { @style = "width:50px; text-align: center", @class = "ord", @id = @Model[i].Id, onkeypress = "OnlyInputNumber(0)", onblur = "this.value=formatNumber(this.value,'#,###','')", onfocus = "this.value=remote_format(this.value)" })
                    </td>
                    <td class="text" style="vertical-align: middle;">
                        @Html.Label("SDate" + Model[i].Id, @Model[i].SDate.ToString(), new { @style = "width:250px; text-align: left", @class = "sdate", @id = @Model[i].Id })
                    </td>
                    <td class="text-center" style="vertical-align: middle;">
                        @Html.CheckBox("chkIndex" + Model[i].Id, (Model[i].Index == true) ? true : false, new { @class = "chk index", @id = @Model[i].Id })
                    </td>
                    <td class="text-center" style="vertical-align: middle;">
                        @Html.CheckBox("chkActive" + Model[i].Id, (Model[i].Active == true) ? true : false, new { @class = "chk active", @id = @Model[i].Id })
                    </td>
                    <td class="text-center" style="vertical-align: middle;">
                        <a href="/admin/tin/sua?id=@Model[i].Id" class="action-link-button"
                                                title="Chỉnh sửa bản ghi"><i class="icon-edit"></i></a>                      
                        <a href="/admin/tin/xoa?id=@Model[i].Id&trang=@ViewBag.mPage&kichco=@ViewBag.PageSize" class="yesno action-link-button"
                           title="Bạn chắc chắn muốn xóa không?"><i class="icon-trash"></i></a>

                        @*<a href="NewsDelete?id=@Model[i].Id&page=@ViewBag.mPage&pagesize=@ViewBag.PageSize" class="yesno action-link-button"
                           title="Bạn chắc chắn muốn bản ghi này ?"><i class="icon-trash"></i></a>*@

                    </td>
                </tr>
            }
        </table>
  
    <div class="pagedlist-bottom">
        @Html.Partial("_Paging")
    </div>  
    <!--Partial View phân trang-->
   


        <div style="clear: both;"></div>
    </div>

