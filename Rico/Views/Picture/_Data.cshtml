</script>
    <!-- #region hide alert-->
    <script type="text/javascript">
        $(function () {

            $(".alert").hide();
        });
    </script>
    <!--#endregion-->
    <!--#region change-->
    <script type="text/javascript">
        $(function () {

            $(".active").click(function () {
                var id = $(this).attr("id");
                $.post("/Picture/ChangeActive", { "id": id },
                    function (data) {
                        $(".alert").replaceWith("<div class='alert alert-info'>" + data + "</div>");
                        $(".alert").fadeOut(4000);
                    });
            });

            // Ajax sử dụng cho change index
            $(".index").click(function () {
                var id = $(this).attr("id");
                $.post("/Picture/ChangeIndex", { "id": id },
                    function (data) {
                        $(".alert").replaceWith("<div class='alert alert-info'>" + data + "</div>");
                        $(".alert").fadeOut(4000);
                    });
            });

            // Ajax sử dụng cho change ord
            $(".ord").change(function () {
                var id = $(this).attr("id");
                var ord = $(this).val();
                if (ord == "") {
                    // Báo lỗi nhập dữ liệu
                    $(".alert").replaceWith("<div class='alert alert-info'>" + "Phải nhập đúng dữ liệu." + "</div>");
                    $(".alert").fadeOut(4000);
                } else {
                    $.post("/Picture/UpdateDirect", { "id": id, "ord": ord },
                        function (data) {
                            // Thay đổi thành công
                            $(".alert").replaceWith("<div class='alert alert-info'>" + data + "</div>");
                            $(".alert").fadeOut(4000);
                        });
                }
            });

