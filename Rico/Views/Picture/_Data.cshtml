                    $(".alert").fadeOut(4000);
                    // Báo lỗi nhập dữ liệu
                } else {
                    $.post("/Picture/UpdateDirect", { "id": id, "tag": tag },
                        function (data) {
                            // Thay đổi thành công
                            $(".alert").replaceWith("<div class='alert alert-info'>" + data + "</div>");
                            $(".alert").fadeOut(4000);
