            $(".width").change(function () {
                var id = $(this).attr("id");
                var Width = $(this).val();
                if (Width == "") {
                    $(".alert").replaceWith("<div class='alert alert-info'>" + "Phải nhập đúng dữ liệu." + "</div>");
                    $(".alert").fadeOut(4000);
                    // Báo lỗi nhập dữ liệu
                } else {
                    $.post("/Picture/UpdateDirect", { "id": id, "Width": Width },
                        function (data) {
                            // Thay đổi thành công
                            $(".alert").replaceWith("<div class='alert alert-info'>" + data + "</div>");
                            $(".alert").fadeOut(4000);
                        });
                }
            });

            // Ajax sử dụng cho change Height
            $(".height").change(function () {
                var id = $(this).attr("id");
                var Height = $(this).val();
                if (Height == "") {
                    $(".alert").replaceWith("<div class='alert alert-info'>" + "Phải nhập đúng dữ liệu." + "</div>");
                    $(".alert").fadeOut(4000);
                    // Báo lỗi nhập dữ liệu
                } else {
                    $.post("/Picture/UpdateDirect", { "id": id, "Height": Height },
                        function (data) {
                            // Thay đổi thành công
                            $(".alert").replaceWith("<div class='alert alert-info'>" + data + "</div>");
                            $(".alert").fadeOut(4000);
                        });
                }
            });

            // Ajax sử dụng cho change Place
            $(".place").change(function () {
                var id = $(this).attr("id");
                var Place = $(this).val();
                if (Place == "") {
                    // Báo lỗi nhập dữ liệu
                    $(".alert").replaceWith("<div class='alert alert-info'>" + "Phải nhập đúng dữ liệu." + "</div>");
                    $(".alert").fadeOut(4000);
                } else {
                    $.post("/Picture/UpdateDirect", { "id": id, "Place": Place },
                        function (data) {
                            // Thay đổi thành công
                            $(".alert").replaceWith("<div class='alert alert-info'>" + data + "</div>");
                            $(".alert").fadeOut(4000);
