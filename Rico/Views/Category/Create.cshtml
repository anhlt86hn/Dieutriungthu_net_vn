@model Rico.Models.Category
@{
    ViewBag.Title = "Thêm mới Loại sản phẩm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section Scripts
{
    <!-- Validate Data -->
    <script type="text/javascript">

        (function ($, W, D) {

            var JQUERY4U = {};

            JQUERY4U.UTIL =
            {
                setupFormValidation: function () {
                    //validation rules
                    $("#formCategory").validate({
                        rules: {
                            GroupProduct: "required",
                            Name: "required",
                            Title: "required",
                            Description: "required",
                            Keyword: "required",
                            Ord: {
                                required: true,
                                number: true
                            }
                        },
                        messages: {
                            GroupProduct: "Phải chọn danh mục sản phẩm",
                            Name: "Phải nhập tên Loại sản phẩm",
                            Title: "Phải nhập tiêu đề",
                            Description: "Phải nhập miêu tả",
                            Keyword: "Phải nhập từ khóa",
                            Ord: {
                                required: "Phải nhập thứ tự",
                                number: "Phải nhập kiểu số"
                            }
                        },
                        submitHandler: function (form) {
                            form.submit();
                        }
                    });
                }
            }

            //when the dom has loaded setup form validation rules
            $(D).ready(function ($) {
                JQUERY4U.UTIL.setupFormValidation();
            });

        })(jQuery, window, document);
    </script>
    <!-- End Validate Data -->

    <script type="text/javascript">
    var editor;
    function createEditor(languageCode, id) {
        var editor = CKEDITOR.replace(id, {
            language: languageCode
        });
    }

    $(function () {
        createEditor('vi', 'Detail');
    });

    </script>
}

<div class="container-fluid">
    <div style="width: 100%; margin: 0 auto;">

        <div id="Breadcrumb" class="Block Breadcrumb ui-widget-content ui-corner-top ui-corner-bottom">
            <ul>
                <li><a href='/admin/default'><i class="icon-home" style="font-size: 14px;"></i>Trang quản trị</a></li>
                <li class='SecondLast'><a href='/admin/loai-san-pham'>Loại sản phẩm</a></li>
                <li class='Last'><span>Thêm mới Loại sản phẩm</span></li>
            </ul>
        </div>

        <div style="clear: both;"></div>

        @using (Html.BeginForm("Create", "Category", FormMethod.Post, new { enctype = "multipart/form-data", @id = "formCategory", @class = "validate-form" }))
        {
            <div id="cph_Main_ContentPane">
                <div class="widget">
                    <!-- widget-title -->
                    <div class="widget-title">
                        <h4><i class="icon-reorder"></i>&nbsp;Thêm mới Loại sản phẩm</h4>

                        <!-- Button -->
                        @Html.Partial("_SaveNav")
                        <!-- End Button -->

                        <div id="hiddenToolBarScroll" class="scrollBox hidden">
                            <h4>
                                <i class="icon-reorder"></i>&nbsp;Thêm mới Loại sản phẩm
                            </h4>

                            <div class="FloatMenuBar">

                                @Html.Partial("_SaveNav")
                            </div>
                        </div>

                    </div>
                    <!-- widget-title -->
                    <!-- widget-body -->
                    <div class="widget-body">

                        <div id="tabs">
                            <div id="tabs-1">

                                <table class="admintable" style="width: 100%;">

                                    <tr>
                                        <td class="key">
                                            Thuộc Danh Mục sản phẩm <span class="Required">*</span>
                                        </td>
                                        <td>
                                            @Html.DropDownList("GroupProduct", "Chọn Danh Mục sản phẩm")
                                            <span class="tooltip-help">
                                                <span class="tooltipContent">
                                                    <p class="tooltiptitle">
                                                        Danh Mục sản phẩm
                                                    </p>
                                                    <p class="tooltipmessage">
                                                        Danh Mục sản phẩm
                                                    </p>
                                                </span>
                                            </span>
                                        </td>
                                    </tr>

                                    <tr>
                                        <td class="key">
                                            Tên Loại sản phẩm <span class="Required">*</span>
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(model => model.Name, new { @class = "text", style = "width:1250px" })
                                            <span class="tooltip-help">
                                                <span class="tooltipContent">
                                                    <p class="tooltiptitle">
                                                        Tên
                                                    </p>
                                                    <p class="tooltipmessage">
                                                        Tên
                                                    </p>
                                                </span>
                                            </span>
                                        </td>
                                    </tr>

                                    <tr>
                                        <td class="key">
                                            Tiêu đề SEO <span class="Required">*</span>
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(model => model.Title, new { @class = "text", style = "width:1250px" })
                                            <span class="tooltip-help">
                                                <span class="tooltipContent">
                                                    <p class="tooltiptitle">
                                                        Tiêu đề
                                                    </p>
                                                    <p class="tooltipmessage">
                                                        Tiêu đề
                                                    </p>
                                                </span>
                                            </span>
                                        </td>
                                    </tr>

                                    <tr>
                                        <td class="key">
                                            Mô tả SEO <span class="Required">*</span>
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(model => model.Description, new { @class = "text", style = "width:1250px" })
                                            <span class="tooltip-help">
                                                <span class="tooltipContent">
                                                    <p class="tooltiptitle">
                                                        Mô tả
                                                    </p>
                                                    <p class="tooltipmessage">
                                                        Mô tả
                                                    </p>
                                                </span>
                                            </span>
                                        </td>
                                    </tr>

                                    <tr>
                                        <td class="key">
                                            Từ khóa SEO <span class="Required">*</span>
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(model => model.Keyword, new { @class = "text", style = "width:1250px" })
                                            <span class="tooltip-help">
                                                <span class="tooltipContent">
                                                    <p class="tooltiptitle">
                                                        Từ khóa
                                                    </p>
                                                    <p class="tooltipmessage">
                                                        Từ khóa
                                                    </p>
                                                </span>
                                            </span>
                                        </td>
                                    </tr>

                                    <tr>
                                        <td class="key">
                                            Thứ tự <span class="Required">*</span>
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(model => model.Ord, new { @onkeypress = "OnlyInputNumber(0)" })
                                            <span class="tooltip-help">
                                                <span class="tooltipContent">
                                                    <p class="tooltiptitle">
                                                        Thứ tự
                                                    </p>
                                                    <p class="tooltipmessage">
                                                        Thứ tự
                                                    </p>
                                                </span>
                                            </span>
                                        </td>
                                    </tr>                                

                                    <tr>
                                        <td class="key">
                                            Nội dung chi tiết
                                        </td>
                                        <td class="post-content">
                                            @Html.TextArea("Detail")
                                            <span class="tooltip-help">
                                                <span class="tooltipContent">
                                                    <p class="tooltiptitle">
                                                        Nội dung chi tiết
                                                    </p>
                                                    <p class="tooltipmessage">
                                                        Nội dung chi tiết
                                                    </p>
                                                </span>
                                            </span>
                                        </td>
                                    </tr>

                                    <tr>
                                        <td class="key">
                                            Hiển thị trang chủ
                                        </td>
                                        <td>
                                            @Html.CheckBox("Index", true)
                                            <span class="tooltip-help">
                                                <span class="tooltipContent">
                                                    <p class="tooltiptitle">
                                                        Hiển thị trang chủ
                                                    </p>
                                                    <p class="tooltipmessage">
                                                        Hiển thị trang chủ
                                                    </p>
                                                </span>
                                            </span>
                                        </td>
                                    </tr>

                                    <tr>
                                        <td class="key">
                                            Ưu tiên
                                        </td>
                                        <td>
                                            @Html.CheckBox("Priority", true)
                                            <span class="tooltip-help">
                                                <span class="tooltipContent">
                                                    <p class="tooltiptitle">
                                                        Ưu tiên
                                                    </p>
                                                    <p class="tooltipmessage">
                                                        Ưu tiên
                                                    </p>
                                                </span>
                                            </span>
                                        </td>
                                    </tr>



                                    <tr>
                                        <td class="key">
                                            Kích hoạt
                                        </td>
                                        <td>
                                            @Html.CheckBox("Active", true)
                                            <span class="tooltip-help">
                                                <span class="tooltipContent">
                                                    <p class="tooltiptitle">
                                                        Kích hoạt
                                                    </p>
                                                    <p class="tooltipmessage">
                                                        Kích hoạt
                                                    </p>
                                                </span>
                                            </span>
                                        </td>
                                    </tr>


                                </table>

                            </div>
                        </div>

                    </div>
                    <!-- widget-body -->

                </div>
            </div>
        }
    </div>
</div>

