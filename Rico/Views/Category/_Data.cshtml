        $(".yesno").easyconfirm({
            locale: { title: 'Xóa', button: ['Không', 'Có'] }
        });
    })
</script>

<!--Ajax sử dụng sửa dữ liệu trực tiếp trên form-->
<script type="text/javascript">
    $(function () {
        //$('#msg').hide();
        $(".alert").hide();

        $(".index").click(function () {
            var id = $(this).attr("id");
            $.post("/Category/ChangeIndex", { "id": id },
                function (data) {
                    $(".alert").replaceWith("<div class='alert alert-info'>" + data + "</div>");
                    $(".alert").fadeOut(4000);
                    
                });
        });
        $(".priority").click(function () {
            var id = $(this).attr("id");
            $.post("/Category/ChangePriority", { "id": id },
                function (data) {
                    $(".alert").replaceWith("<div class='alert alert-info'>" + data + "</div>");
                    $(".alert").fadeOut(4000);

                });
        });
        $(".active").click(function () {
            var id = $(this).attr("id");
            $.post("/Category/ChangeActive", { "id": id },
                function (data) {
                    $(".alert").replaceWith("<div class='alert alert-info'>" + data + "</div>");
                    $(".alert").fadeOut(4000);

                });
        });

        // Ajax sử dụng cho change ord
        $(".ord").change(function () {
            var id = $(this).attr("id");
            var ord = $(this).val();
            if (ord == "") {
                $(".alert").replaceWith("<div class='alert alert-info'>" + "Phải nhập đúng dữ liệu." + "</div>");
                $(".alert").fadeOut(4000);                
            } else {
                $.post("/Category/UpdateDirect", { "id": id, "ord": ord },
                    function (data) {
                        $(".alert").replaceWith("<div class='alert alert-info'>" + data + "</div>");
                        $(".alert").fadeOut(4000);                       
                    });
            }
        });
        // Ajax sử dụng cho change name
        $(".name").change(function () {
            var id = $(this).attr("id");
            var name = $(this).val();
            if (name == "") {
                $(".alert").replaceWith("<div class='alert alert-info'>" + "Phải nhập đúng dữ liệu." + "</div>");
                $(".alert").fadeOut(4000);                
            } else {               
                $.post("/Category/UpdateDirect", { "id": id, "name": name },
                    function (data) {
                        $(".alert").replaceWith("<div class='alert alert-info'>" + data + "</div>");
                        $(".alert").fadeOut(4000);                       
                    });
            }
        });


        // Ajax sử dụng cho change tag
        $(".tag").change(function () {
            var id = $(this).attr("id");
            var tag = $(this).val();
            if (tag == "") {
                $(".alert").replaceWith("<div class='alert alert-info'>" + "Phải nhập đúng dữ liệu." + "</div>");
                $(".alert").fadeOut(4000);               
            } else {             
                $.post("/Category/UpdateDirect", { "id": id, "tag": tag },
                    function (data) {
                        $(".alert").replaceWith("<div class='alert alert-info'>" + data + "</div>");
                        $(".alert").fadeOut(4000);                       
                    });
            }
        });
    });

