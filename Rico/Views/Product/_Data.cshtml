<script type="text/javascript">
    $(function () {
        $('#msg').hide();
        
        $(".index").click(function () {
            var id = $(this).attr("id");
            clearUpdateMessage();
            $.post("/Product/ChangeIndex", { "id": id },
                function (data) {
                    $('#msg').show();
                    $('#update-message').removeClass().addClass("alert alert-info").text(htmlDecode(data));
                    $('#msg').fadeOut(5000);
                });
        });

        $(".priority").click(function () {
            var id = $(this).attr("id");
            clearUpdateMessage();
            $.post("/Product/ChangePriority", { "id": id },
                function (data) {
                    $('#msg').show();
                    $('#update-message').removeClass().addClass("alert alert-info").text(htmlDecode(data));
                    $('#msg').fadeOut(5000);
                });
        });
        $(".active").click(function () {
            var id = $(this).attr("id");
            clearUpdateMessage();
            $.post("/Product/ChangeActive", { "id": id },
                function (data) {
                    $('#msg').show();
                    $('#update-message').removeClass().addClass("alert alert-info").text(htmlDecode(data));
                    $('#msg').fadeOut(5000);
                });
        });   

        $(".code").change(function () {
            var id = $(this).attr("id");
            var code = $(this).val();
            if (code == "") {
                // Báo lỗi nhập dữ liệu
                $('#msg').show();
                $('#update-message').removeClass().addClass("alert alert-error").text("Phải nhập mã sản phẩm.");
                $('#msg').fadeOut(5000);
            } else {
                clearUpdateMessage();
                $.post("/Product/UpdateDirect", { "id": id, "code": code },
                    function (data) {
                        // Thay đổi thành công
                        $('#msg').show();
                        $('#update-message').removeClass().addClass("alert alert-info").text(htmlDecode(data));
                        $('#msg').fadeOut(5000);
                    });
            }
        });

        $(".name").change(function () {
            var id = $(this).attr("id");
            var name = $(this).val();
            if (name == "") {
                // Báo lỗi nhập dữ liệu
                $('#msg').show();
                $('#update-message').removeClass().addClass("alert alert-error").text("Phải nhập tên sản phẩm.");
                $('#msg').fadeOut(5000);
            } else {
                clearUpdateMessage();
                $.post("/Product/UpdateDirect", { "id": id, "name": name },
                    function (data) {
                        // Thay đổi thành công
                        $('#msg').show();
                        $('#update-message').removeClass().addClass("alert alert-info").text(htmlDecode(data));
                        $('#msg').fadeOut(5000);
                    });
            }
        });

        $(".priceretail").change(function () {
            var id = $(this).attr("id");
            var priceRetail = $(this).val();
            if (priceRetail == "") {
                // Báo lỗi nhập dữ liệu
                $('#msg').show();
                $('#update-message').removeClass().addClass("alert alert-error").text("Phải nhập giá chính.");
                $('#msg').fadeOut(5000);
            } else {
                clearUpdateMessage();
                $.post("/Product/UpdateDirect", { "id": id, "priceRetail": priceRetail },
                    function (data) {
                        // Thay đổi thành công
                        $('#msg').show();
                        $('#update-message').removeClass().addClass("alert alert-info").text(htmlDecode(data));
                        $('#msg').fadeOut(5000);
                    });
            }
        });

        $(".pricepromotion").change(function () {
            var id = $(this).attr("id");
            var pricePromotion = $(this).val();
            if (pricePromotion == "") {
                // Báo lỗi nhập dữ liệu
                $('#msg').show();
                $('#update-message').removeClass().addClass("alert alert-error").text("Phải nhập giá khuyến mại.");
                $('#msg').fadeOut(5000);
            } else {
                clearUpdateMessage();
                $.post("/Product/UpdateDirect", { "id": id, "pricePromotion": pricePromotion },
                    function (data) {
                        // Thay đổi thành công
                        $('#msg').show();
                        $('#update-message').removeClass().addClass("alert alert-info").text(htmlDecode(data));
                        $('#msg').fadeOut(5000);
                    });
            }
        });

        $(".num").change(function () {
            var id = $(this).attr("id");
            var num = $(this).val();
            if (num == "") {
                // Báo lỗi nhập dữ liệu
                $('#msg').show();
                $('#update-message').removeClass().addClass("alert alert-error").text("Phải nhập số lượng.");
                $('#msg').fadeOut(5000);
            } else {
                clearUpdateMessage();
                $.post("/Product/UpdateDirect", { "id": id, "num": num },
                    function (data) {
                        // Thay đổi thành công
                        $('#msg').show();
                        $('#update-message').removeClass().addClass("alert alert-info").text(htmlDecode(data));
                        $('#msg').fadeOut(5000);
                    });
            }
        });

        $(".inventory").change(function () {
            var id = $(this).attr("id");
            var inventory = $(this).val();
            if (inventory == "") {
                // Báo lỗi nhập dữ liệu
                $('#msg').show();
                $('#update-message').removeClass().addClass("alert alert-error").text("Phải nhập số sản phẩm còn trong kho.");
                $('#msg').fadeOut(5000);
            } else {
                clearUpdateMessage();
                $.post("/Product/UpdateDirect", { "id": id, "inventory": inventory },
                    function (data) {
                        // Thay đổi thành công
                        $('#msg').show();
                        $('#update-message').removeClass().addClass("alert alert-info").text(htmlDecode(data));
                        $('#msg').fadeOut(5000);
                    });
            }
        });

        // Ajax sử dụng cho change Name
        $(".tag").change(function () {
            var id = $(this).attr("id");
            var tag = $(this).val();
            if (tag == "") {
                $(".alert").replaceWith("<div class='alert alert-info'>" + "Phải nhập đúng dữ liệu." + "</div>");
                $(".alert").fadeOut(4000);
                // Báo lỗi nhập dữ liệu
            } else {
                $.post("/Product/UpdateDirect", { "id": id, "tag": tag },
                    function (data) {
                        // Thay đổi thành công
                        $(".alert").replaceWith("<div class='alert alert-info'>" + data + "</div>");
                        $(".alert").fadeOut(4000);
                    });
            }
        });



        $(".ord").change(function () {
            var id = $(this).attr("id");
            var ord = $(this).val();
            if (ord == "") {
                // Báo lỗi nhập dữ liệu
                $('#msg').show();
                $('#update-message').removeClass().addClass("alert alert-error").text("Phải nhập thứ tự.");
                $('#msg').fadeOut(5000);
            } else {
                clearUpdateMessage();
                $.post("/Product/UpdateDirect", { "id": id, "ord": ord },
                    function (data) {
                        // Thay đổi thành công
                        $('#msg').show();
                        $('#update-message').removeClass().addClass("alert alert-info").text(htmlDecode(data));
                        $('#msg').fadeOut(5000);
                    });
            }
        });
      

     
    });

    function clearUpdateMessage() {
        $('#update-message').text("");
    }

    function htmlDecode(value) {
        if (value) {
            return $('<div />').html(value).text();
        }
        else {
            return '';
        }
    }
</script>
