@model Rico.Models.Contact
@{
    ViewBag.Title = "Xem phản hồi/ liên hệ";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@section Scripts
{
  
}

<div class="container-fluid">
    <div style="width: 100%; margin: 0 auto;">

        <div id="Breadcrumb" class="Block Breadcrumb ui-widget-content ui-corner-top ui-corner-bottom">
            <ul>
                <li><a href='/admin/tin'><i class="icon-home" style="font-size: 14px;"></i>Trang chủ</a></li>
                <li class='SecondLast'><a href='/admin/phan-hoi'>Phản hồi</a></li>
                <li class='Last'><span>Xem phản hồi</span></li>
                @*<li class='Last'><a href='/admin/phan-hoi/xem-chi-tiet?id=@Html.Raw(ViewBag.ContactId)'>Xem phản hồi/ liên hệ</a></li>*@
            </ul>
        </div>
        <div style="clear: both;"></div>
        <div id="cph_Main_ContentPane">
            <div class="widget">
                <div class="widget-title">
                    <h4><i class="icon-reorder"></i>&nbsp;Xem phản hồi</h4>

                    <!-- Button -->
                    @Html.Partial("_SaveNav")
                    <!-- End Button -->

                    <div id="hiddenToolBarScroll" class="scrollBox hidden">
                        <h4><i class="icon-reorder"></i>&nbsp;Xem phản hồi</h4>
                        <div class="FloatMenuBar">
                            @Html.Partial("_SaveNav")

                        </div>
                    </div>

                </div>
                <div class="widget-body">
                    <table class="table table-striped table-bordered dataTable table-hover" cellspacing="0" id="tableContact" style="border-collapse: collapse;">
                        <tr>

                            <th scope="col" class="number" style="width: 200px;">Mục</th>
                            <th scope="col" class="number" style="width: 800px;">Nội dung</th>

                        </tr>
                        <tr style="background-color: #fff">
                            <td align="center">
                                Họ tên
                            </td>
                            <td style="text-align: left">
                                @Model.Name
                            </td>
                        </tr>

                        <tr style="background-color: #fff">
                            <td align="center">
                                Tiêu đề
                            </td>
                            <td style="text-align: left">
                                @Model.Title
                            </td>
                        </tr>

                        <tr style="background-color: #fff">
                            <td align="center">
                                Nội dung
                            </td>
                            <td style="text-align: left">
                                @Model.Detail
                            </td>
                        </tr>

                        <tr style="background-color: #fff">
                            <td align="center">
                                Ngày gửi
                            </td>
                            <td style="text-align: left">
                                @Model.SDate
                            </td>
                        </tr>

                        <tr style="background-color: #fff">
                            <td align="center">
                                Số điện thoại
                            </td>
                            <td style="text-align: left">
                                @Model.Phone
                            </td>
                        </tr>

                        <tr style="background-color: #fff">
                            <td align="center">
                                Địa chỉ
                            </td>
                            <td style="text-align: left">
                                @Model.Address
                            </td>
                        </tr>

                        <tr style="background-color: #fff">
                            <td align="center">
                                Email
                            </td>
                            <td style="text-align: left">
                                @Model.Email
                            </td>
                        </tr>

                        <tr style="background-color: #fff">
                            <td align="center">
                                Công ty/tổ chức
                            </td>
                            <td style="text-align: left">
                                @Model.Company
                            </td>
                        </tr>


                    </table>
                </div>
                </div>
            </div>
        </div>
</div>

